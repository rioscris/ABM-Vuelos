@page
@model ABMVuelos.Pages.Vuelos.EditModel

@{
    ViewData["Title"] = "Modificación";
}

<h1>Modificar un vuelo</h1>

<h4>Seleccione y modifique los campos que desea modificar.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vuelo.ID" />
            <div class="form-group">
                <label asp-for="Vuelo.llegada" class="control-label"></label>
                <input asp-for="Vuelo.llegada" class="form-control" />
                <span asp-validation-for="Vuelo.llegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vuelo.Linea" class="control-label"></label>
                <input asp-for="Vuelo.Linea" class="form-control" />
                <span asp-validation-for="Vuelo.Linea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vuelo.Codigo" class="control-label"></label>
                <input asp-for="Vuelo.Codigo" class="form-control" />
                <span asp-validation-for="Vuelo.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Vuelo.Demorado" /> @Html.DisplayNameFor(model => model.Vuelo.Demorado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
